#include <stdio.h>

int main() {
    int n;
    double producto = 1.0;

    // Solicitar al usuario que ingrese un n√∫mero
    printf("Ingrese un numero: ");
    scanf("%d", &n);

    // Imprimir la serie y calcular el producto
    printf("Si n = %d, producto = ", n);
    for (int i = 1; i <= n; i++) {
        if (i == 1) {
            printf("1");
        } else {
            printf("1/%d", i);
        }
        producto *= 1.0 / i;
        if (i != n) {
            printf(" * ");
        }
    }

    // Imprimir el producto total (opcional si solo se necesita la serie)
    // printf(" = %f\n", producto);

    return 0;
}
