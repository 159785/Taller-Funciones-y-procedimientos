#include <stdio.h>

int main() {
    int n, suma = 0;

    // Solicitar al usuario que ingrese un número
    printf("Ingrese un numero: ");
    scanf("%d", &n);

    // Imprimir la serie de números pares y calcular la suma
    printf("suma = ");
    for (int i = 2; i <= n; i += 2) {
        printf("%d", i);
        suma += i;
        if (i != n) {
            printf(" + ");
        }
    }

    // Imprimir la suma total
    printf(" = %d\n", suma);

    return 0;
}
