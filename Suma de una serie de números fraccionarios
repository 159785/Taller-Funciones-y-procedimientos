#include <stdio.h>

int main() {
    int n;
    double suma = 0.0;

    // Solicitar al usuario que ingrese un n√∫mero
    printf("Ingrese un numero: ");
    scanf("%d", &n);

    // Imprimir la serie y calcular la suma
    printf("Si n = %d, suma = ", n);
    for (int i = 1; i <= n; i++) {
        if (i == 1) {
            printf("1");
        } else {
            printf("1/%d", i);
        }
        suma += 1.0 / i;
        if (i != n) {
            printf(" + ");
        }
    }

    // Imprimir la suma total (opcional si solo se necesita la serie)
    // printf(" = %f\n", suma);

    return 0;
}
