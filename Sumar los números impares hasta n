#include <stdio.h>

int main() {
    int n, suma = 0;

    // Solicitar al usuario que ingrese un número
    printf("Ingrese un numero: ");
    scanf("%d", &n);

    // Calcular la suma de los números impares desde 1 hasta n
    for (int i = 1; i <= n; i += 2) {
        suma += i;
    }

    // Imprimir el resultado sin la ecuación completa
    printf("La suma de todos los numeros impares desde 1 hasta %d es: %d\n", n, suma);

    return 0;
}
